@model RentAHousband.ViewModels.NewHousbandViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Housband</h2>
<p>
    @Html.ActionLink("New Housband", "New", "Housbands", null, new { @class = "btn btn-primary" })
</p>
@using (@Html.BeginForm("Save", "Housbands"))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SkillName)
        @Html.TextBoxFor(m => m.SkillName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Age)
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Age)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PersonalityTypeId)
        @Html.DropDownListFor(m => m.PersonalityTypeId, new SelectList(Model.PersonalityTypes, "Id", "Type"), "Select type", new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.IsBearded) With beard?
        </label>
    </div>
    <button class="btn btn-primary">Save</button>
    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    }


